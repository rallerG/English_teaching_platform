<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ProfilePageFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/greenBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleX="1.3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/teacher_cover" />

        <TextView
            android:id="@+id/editProfileTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="367dp"
            android:layout_marginEnd="16dp"
            android:text="Edit profile"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/greenBox" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/teacher_ProfilePicture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/student_2"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="1dp"
            app:civ_circle_background_color="#FFFFFF" />

        <ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/my_switcher_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="0dp">

            <TextView
                android:id="@+id/teacher_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Student name"
                android:textAlignment="center"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/hidden_edit_view_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Edit"
                android:textAlignment="center"
                android:textSize="36sp" />
        </ViewSwitcher>

        <ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/my_switcher2_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="0dp">

            <TextView
                android:id="@+id/teacher_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student@mail.com"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/hidden_edit_view2_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Edit"
                android:textAlignment="center"
                android:textSize="24sp" />
        </ViewSwitcher>

        <ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/my_switcher3_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/teacher_profile_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/hidden_edit_view3_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Edit"
                android:textAlignment="center"
                android:textSize="24sp" />
        </ViewSwitcher>

        <ViewSwitcher
            android:id="@+id/my_switcher4_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/teacher_profile_description"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:text="Your description"
                android:textAlignment="center"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/hidden_edit_view4_teacher"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="Your description..."
                android:inputType="textMultiLine" />
        </ViewSwitcher>


        <Button
            android:id="@+id/confirmEdit_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:text="Confirm edit"
            android:visibility="visible"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="595dp" />

        <Button
            android:id="@+id/buttonCancel_teacher"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="Cancel"
            android:textAlignment="center"
            android:textSize="12sp" />


    </LinearLayout>

</FrameLayout>